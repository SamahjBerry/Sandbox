RC1 = random.choice(options)
def Rum (UM):
  if UM == 'paper':
    print('Paper beats rock, you lose!')
  elif UM == 'rock': 
    print('Draw,try again')
  else:
    print('Lose, please try again')
def Sum (UM):
  if UM == 'paper':
    print('You win, play again!')
  elif UM == 'rock':
    print('You lose, try again')
  else:
    print('Draw, try again')
def Pum (UM):
  if UM == 'paper':
    print('Draw, try again')
  elif UM == 'rock':
    print('You win')
  else:
    print('You lose!')
